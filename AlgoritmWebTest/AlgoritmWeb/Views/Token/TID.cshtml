@using AlgoritmWeb.Controllers
@if (WorkSpaceController.terminal != string.Empty)
{
    <style>
        .box {
            width: 40vh;
            height: 30px;
            border: 1px solid #ccc;
            font-size: 18px;
            color: #f7a602;
            background-color: #413F3C;
            border-radius: 5px;
            box-shadow: 2px 2px #ccc;
        }
    </style>
    <style>
        .label {
            width: 40vh;
            height: 30px;
            font-size: 18px;
            color: #ccc;
            background-color: #413F3C;
        }
    </style>
<form method="post" asp-controller="AddOrganization" asp-action="GetTab">
<h6><label class="label" for="TerminalId">Терминальная группа:</label></h6>
        <div class="input-group">
<select class="box" name="TerminalId">
    @foreach (var item in AddOrganization.terminals)
    {
        @if (item.organizationId == WorkSpaceController.terminal)
        {
            <option value="@item.id">@item.name</option>
        }
    }
</select>
        <h6><input class="btn" type="image" src="~/897770.png" style="height: 35px; width= 35px" value="" /> </h6>
        </div>
</form>
<p></p>
<h6><label class="label" for="OrderTypes">Тип заказа:</label></h6>
<select class="box" name="OrderTypes">
        @foreach (var item in AddOrganization.orderTypes)
    {
        @if (item.OID == WorkSpaceController.terminal)
        {
                <option value="@item.id">@item.name</option>
        }
    }
</select>
    <p></p>
    <h6><label class="label" for="Discounts">Скидки:</label></h6>
    <select class="box" name="Discounts">
        @foreach (var item in AddOrganization._Discounts)
        {
            @if (item.OID == WorkSpaceController.terminal)
            {
                <option value="@item.id">@item.name</option>
            }
        }
    </select>
}
<style>
    .btn {
    @* border: 1px solid #ccc; color: #ccc;*@ background-color: #413F3C;
        margin-left: 5px;
        position: relative;
        top: -1px;
        left: 0px;
    }
</style>
